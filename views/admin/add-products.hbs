<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{@index}}</td> <!-- Index of the current product -->
                        <td>{{this.name}}</td> <!-- Name of the product -->
                        <td>{{this.category}}</td> <!-- Category of the product -->
                        <td>{{this.price}}</td> <!-- Price of the product -->
                        <td>{{this.description}}</td> <!-- Description of the product -->
                        <td>
                            <img src="{{this.image}}" style="width: 50px; height: 50px;" alt="Product Image">
                        </td> <!-- Image of the product -->
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
